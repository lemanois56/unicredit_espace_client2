const lang = ref('it')

function getNested(obj: MessageDict, path: string): string | undefined {
  return path.split('.').reduce<any>((o, k) => {
    if (o && typeof o === 'object' && k in o) {
      return o[k];
    }
    return undefined;
  }, obj) as string | undefined;
}

export function useI18n() {
  const t = (key: string, params?: Record<string, string | number>) => {
    let str = getNested(messages[lang.value], key) || key;
    if (params && typeof str === 'string') {
      Object.entries(params).forEach(([k, v]) => {
        str = str.replace(new RegExp(`{${k}}`, 'g'), String(v));
      });
    }
    return str;
  }
  return { lang, t, setLang: (l: string) => (lang.value = l) }
}

export default defineNuxtPlugin((nuxtApp) => {
  nuxtApp.provide('i18n', useI18n())
})
